@page
@model Utulek.Pages.Psi.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Detaily</h1>

<div>
    <h4>Pes</h4>
    <hr />
    <div class="d-flex">
        <div class="col-3 me-3">
            <img src="@Model.Pes.Foto" alt="@Model.Pes.Jmeno" class="img-fluid rounded" />
        </div>
        <div class="col">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Pes.Jmeno)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Pes.Jmeno)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Pes.Pohlavi)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Pes.Pohlavi)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Pes.Plemeno)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Pes.Plemeno)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Pes.Vek)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Pes.Vek)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Pes.Hmotnost)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Pes.Hmotnost)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Pes.MestoNalezu)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Pes.MestoNalezu)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Pes.Volny)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Pes.Volny)
                </dd>
            </dl>
        </div>
    </div>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Pes?.Id">Upravit</a> |
    <a asp-page="./Index">Zpátky na seznam</a>
</div>
