@page
@model Utulek.Pages.Kocky.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Přehled koček</h1>

<p>
    <a asp-page="Create">Nový záznam</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Kocka[0].Jmeno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kocka[0].Pohlavi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kocka[0].Plemeno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kocka[0].Vek)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kocka[0].Hmotnost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kocka[0].MestoNalezu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kocka[0].Foto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kocka[0].Volny)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Kocka)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Jmeno)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pohlavi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Plemeno)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Vek)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hmotnost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MestoNalezu)
                </td>
                <td>
                    <img src="@item.Foto" style="width:100px;border-radius:50px;" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Volny)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Upravit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Detaily</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Smazat</a>
                </td>
            </tr>
        }
    </tbody>
</table>
