@page
@model Utulek.Pages.Kocky.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Úprava kočky</h1>

<h4>Kočka</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Kocka.Id" />
            <div class="form-group">
                <label asp-for="Kocka.Jmeno" class="control-label"></label>
                <input asp-for="Kocka.Jmeno" class="form-control" />
                <span asp-validation-for="Kocka.Jmeno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kocka.Pohlavi" class="control-label"></label>
                <select asp-for="Kocka.Pohlavi" class="form-control">
                    @foreach (Pohlavi item in Enum.GetValues(typeof(Pohlavi)))
                    {
                        <option>@item</option>
                    }
                </select>
                <span asp-validation-for="Kocka.Pohlavi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kocka.Plemeno" class="control-label"></label>
                <input asp-for="Kocka.Plemeno" class="form-control" />
                <span asp-validation-for="Kocka.Plemeno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kocka.Vek" class="control-label"></label>
                <input asp-for="Kocka.Vek" class="form-control" />
                <span asp-validation-for="Kocka.Vek" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kocka.Hmotnost" class="control-label"></label>
                <input asp-for="Kocka.Hmotnost" class="form-control" />
                <span asp-validation-for="Kocka.Hmotnost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kocka.MestoNalezu" class="control-label"></label>
                <input asp-for="Kocka.MestoNalezu" class="form-control" />
                <span asp-validation-for="Kocka.MestoNalezu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kocka.Foto" class="control-label"></label>
                <input asp-for="Kocka.Foto" class="form-control" />
                <span asp-validation-for="Kocka.Foto" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Kocka.Volny" /> @Html.DisplayNameFor(model => model.Kocka.Volny)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Uložit" class="btn btn-primary mb-2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Zpátky na seznam</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
